@model Category
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="DeletePost">
    <input asp-for="ID" type="hidden">
    </input>
    <div class="border border-dark p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary text-end">حذف دسته</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All" class="text-danger"></div> customize error massage*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-outline-danger" style="width:150px;margin:10px;">حذف دسته</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="150px;">بازگشت به لیست</a>
    </div>
</form>
