@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" /> @*calling partial view, like a method*@

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> ایجاد دسته ی جدید
            </a>
        </div>
        <div class="col-6">
            <h2 class="text-primary text-end">
                لیست دسته ها
            </h2>
        </div>
    </div>

    <table class="table table-striped table-bordered" style="width:100%;">
        <thead>
            <tr>
                <th>
                    نام دسته
                </th>
                <th>
                    ترتیب نمایش
                </th>
                <th> 
                    ویرایش دسته
                </th>
                <th> 
                    حذف دسته
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td width="30%">
                        @obj.DisplayOrder
                    </td>
                    <td> @*edit button*@
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.ID">
                                <i class="bi bi-pencil-square"></i>ویرایش
                            </a>
                        </div>
                    </td>
                    <td>
                        @*delete button*@
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.ID">
                                <i class="bi bi-trash"></i>حذف
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>