@*show success message of create, edit, and delete*@
@if (TempData["success"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    @*We added JS here, because we just need it here*@
    <script type="text/javascript">
        @*Display a success toast, with a title*@
        toastr.options.positionClass = "toast-bottom-right"; @*Move message to bottom right*@
        toastr.options.progressBar = true; @*add ProgressEvent bar to MessageChannel box*@
        toastr.success('@TempData["success"]');
        
    </script>
}